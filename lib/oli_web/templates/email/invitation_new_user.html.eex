<%= content_tag(:h3, "Hi,") %>
<%= content_tag(:p, "You've been invited by #{@invited_by_user_id} as a course author at the Open Learning Initiative.") %>
<%= if assigns[:project_title] do %>
<%= content_tag(:p, "Course Project Title: '#{@project_title}'") %>
<% end %>
<%= content_tag(:p, "Please use the following link to accept your invitation:") %>
<%= content_tag(:p, link(@url, to: @url)) %>
